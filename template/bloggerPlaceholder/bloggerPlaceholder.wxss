/* template/bloggerPlaceholder/bloggerPlaceholder.wxss */
.list {
  font-size: 0;
}
.list .item {
  padding-top: 30rpx;
  text-align: left;
}
.header {
  display:flex;
  -webkit-display:flex;
  justify-content:space-between;
  -webkit-justify-content:space-between;
  align-items:center;
  -webkit-align-items:center;
  padding: 0 30rpx;
}
.avatar {
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  background-color: #efefef;
}
.info {
  flex: 1;
  -webkit-flex: 1;
  font-size: 0;
  padding: 0 20rpx;
}
.info view {
  width: 100%;
  height: 16px;
  background-color: #efefef;
}
.info view:first-child {
  margin-bottom: 5px;
  width: 80%;
}
.info view:last-child {
  width: 120rpx;
}
.btn {
  height: 55rpx;
  border-radius:55rpx;
  width:160rpx;
  background-color: #efefef;
}
.img-list {
  padding:30rpx 25rpx 20rpx;
  display:flex;
  display:-webkit-flex;
}

.img-list > view {
  flex:1;
  -webkit-flex:1;
  margin:0 5rpx;
  width:-webkit-calc(25vw - 22.5rpx);
  height:-webkit-calc(25vw - 22.5rpx);
  max-width:25vw;
  border-radius:10rpx;
  background-color:#efefef;
}
