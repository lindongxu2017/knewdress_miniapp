/* template/lable/lable.wxss */
.selected-wrapper {
    box-sizing: border-box;
    padding: 25rpx 15px;
    margin-bottom: 10rpx;
}

.lable-title {
    background-color: #FAF6F2;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    align-items: center;
    -webkit-align-items: center;
    padding: 10rpx 20rpx 10rpx 30rpx;
    position: relative;
    margin-bottom: 2px;
    overflow: hidden;
}

.lable-title:before {
    content: "";
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    background-color: #fff;
    top: -45rpx;
    left: -35rpx;
    transform: rotate(45deg);
}

.lable-title .text {
    font-size: 30rpx;
    font-weight: bold;
    color: #474747;
}

.lable-title .collapse {
    font-size: 23rpx;
    color: #474747;
}

.content-wrapper {
    background-color: #FAF6F2;
    box-sizing: border-box;
    padding: 20rpx 20rpx 0;
    padding-right: 0;
    position: relative;
}
.content-wrapper:before {
    content: "";
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    background-color: #fff;
    bottom: -45rpx;
    right: -35rpx;
    transform: rotate(45deg);
}
.content-wrapper .item {
    padding: 0 23rpx;
    font-size: 24rpx;
    color: #474747;
    border-radius: 50rpx;
    background-color: #F0E8E0;
    display: inline-block;
    margin-right: 18rpx;
    margin-bottom: 20rpx;
    vertical-align: middle;
    box-sizing: border-box;
    line-height: 50rpx;
    position: relative;
}

.content-wrapper .no-data {
    text-align: center;
    font-size: 28rpx;
    padding-bottom: 20rpx;
}

.content-wrapper .item.clip {
    background-color: transparent;
    border: 1rpx solid #AEAEAE;
}

.content-wrapper .item.clip.active {
    color: #D6D6D6;
    border-color: #D9D9D9;
}

.content-wrapper .create {
    width: 65rpx;
    height: 20px;
    margin-right: 18rpx;
    margin-bottom: 20rpx;
    vertical-align: middle;
}

.group-wrapper {
    position: relative;
    padding-bottom: 115rpx;
}

.group-item {
    top: 0;
    left: 0;
}

.add-icon {
    width: 100%;
}
.add-icon.pad {
    margin-left: 15px;
}

.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(41,39,39,0.55);
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
    justify-content: center;
    -webkit-justify-content: center;
    align-items: center;
    -webkit-align-items: center;
    z-index: 2;
}
.mask .main-content {
    position: absolute;
    width: 80%;
    background-color: #fff;
    border-radius: 10rpx;
}

.mask .main-content .title {
    text-align: center;
    line-height: 100rpx;
    font-size: 35rpx;
}

.mask .main-content .content {
    padding: 0 30rpx 30rpx;
}

.mask .main-content .content .input {
    padding: 10rpx 25rpx;
    font-size: 28rpx;
    background-color: #F6F5F5;
    border-radius: 5rpx;
}

.operation {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    border-top: 1rpx solid #DCDCDC;
}


.operation .cancle, .operation .confirm {
    line-height: 95rpx;
    text-align: center;
    flex: 1;
    font-size: 32rpx;
}
.operation .cancle {
    border-right: 1rpx solid #DCDCDC;
    color: #B5B7B9;
}

.select {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    align-items: center;
    -webkit-align-items: center;
    margin-bottom: 24rpx;
    background-color: #F6F5F5;
    padding: 10rpx 25rpx;
    height: 1.4rem;
    border-radius: 5rpx;
}
.select .icon {
    width: 20rpx;
}
.select .picker-wrapper {
    flex: 1;
    -webkit-flex: 1;
}
.select .picker {
    font-size: 28rpx;
    color: #474747;
}

.operation-wrapper {
    position: absolute;
    width: 160rpx;
    height: 65rpx;
    font-size: 25rpx;
    color: #fff;
    background-color: #474747;
    left: 50%;
    margin-left: -80rpx;
    top: -85rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    box-sizing: border-box;
    border-radius: 8rpx;
}

.operation-wrapper:before {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border: 5px solid #474747;
    left: 50%;
    margin-left: -5px;
    bottom: -10px;
    border-color: #474747 transparent transparent;
}

.operation-wrapper .edit, .operation-wrapper .del {
    flex: 1;
    -webkit-flex: 1;
    line-height: 1;
    text-align: center;
}

.operation-wrapper .edit {
    border-right: 1rpx solid #fff;
}

.footer {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    border-top: 1rpx solid #EEEEEE;
    background-color: #fff;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    padding: 20rpx;
    box-sizing: border-box;
}

.footer .cancel {
    line-height: 75rpx;
    font-size: 30rpx;
    flex: 1;
    -webkit-flex: 1;
    border: 1rpx solid #E5E5E5;
    border-radius: 75rpx;
    text-align: center;
    margin-right: 60rpx;
}

.footer .confirm {
    line-height: 75rpx;
    font-size: 30rpx;
    flex: 1;
    -webkit-flex: 1;
    border: 1rpx solid #FFDB32;
    border-radius: 75rpx;
    background-color: #FFDB32;
    text-align: center;
}
.img-wrapper {
    padding: 15px 0 0 15px;
    font-size: 0;
}
.img-item {
    display: inline-block;
    vertical-align: middle;
    width: calc(25% - 15px);
    margin-right: 15px;
    margin-bottom: 15px;
}
.img-item .img {
    padding-bottom: 100%;
    position: relative;
    overflow: hidden;
    border-radius: 8rpx;
}
.img-item .img .src {
    position: absolute;
    width: 100%;
    height: 100%;
}
.img-item .img .del {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 0;
    right: 0;
}