/* template/shop/classify/classify.wxss */
.goods-content {
    box-sizing: border-box;
}
.list {
    white-space: nowrap;
    font-size: 0;
    padding: 0 0 20rpx 20rpx;
}
.left-classify .list .item {
    padding: 16rpx 30rpx;
    background-color: #fff;
    font-size: 28rpx;
    display: inline-block;
}
.list .item.active {
    position: relative;
}
.list .item.active:before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 6rpx;
    border-radius: 6rpx;
    background-color: #474747;
}

.right-goods {
    background-color: #F0F3F8;
    padding:16rpx 0;
}
.ad-wrapper {
    padding: 0 10rpx;
}
.ad-img {
    width: 100%;
}

.goods-list {
    padding-left: 20rpx;
    font-size: 0;
    white-space: nowrap;
}
.goods-list .item {
    padding: 0 30rpx;
    border-radius: 88rpx;
    border: 1px solid #fff;
    display: inline-block;
    color: #474747;
    margin-right: 20rpx;
    line-height: 55rpx;
    background-color: #fff;
}
.goods-list .item.active {
    background-color: #ccc;
    border-color: #ccc;
}
.cate-name {
    font-size: 28rpx;
    color: #666;
}
.no-data {
    padding: 100rpx 0;
    text-align: center;
    color: #999;
    font-size: 28rpx;
}