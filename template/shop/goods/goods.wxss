/* template/goods/goods.wxss */
.img-wrapper {
    width: 100%;
    padding-bottom: 75%;
    position: relative;
    margin-bottom: 10rpx;
}
.img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    border-radius: 6rpx;
}

.desc {
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #606266;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-bottom: 10rpx;
    height: 80rpx;
}

.price {
    color: red;
    font-size: 28rpx;
}