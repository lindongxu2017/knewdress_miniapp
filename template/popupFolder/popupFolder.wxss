/* template/popupFolder/popupFolder.wxss */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11;
  width: 100%;
  height: 100%;
  background-color: rgba(41,39,39,0.55);
}
.wrapper {
  position: absolute;
  top: 37%;
  left: 10%;
  width: 80%;
  height: 25%;
  background-color: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  -webkit-flex-direction: column;
}
.title {
  font-size: 35rpx;
  color: #474747;
  text-align: center;
  line-height: 130rpx;
}
.input-wrapper {
  flex: 1;
  -webkit-flex: 1;
  padding: 0 6%;
}
.input-wrapper input {
  font-size: 28rpx;
  background-color: #F6F5F5;
  border-radius: 5rpx;
  padding: 0 20rpx;
  height: 64rpx;
}
.popup-footer {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  border-top: 1rpx solid #DCDCDC;
  height: 96rpx;
}
.popup-footer .cancel, .popup-footer .confirm {
  flex: 1;
  -webkit-flex: 1;
  text-align: center;
  font-size: 32rpx;
  line-height: 96rpx;
}
.cancel {
  color: #85919C;
  border-right: 1rpx solid #DCDCDC;
}
.confirm {
  color: #474747;
}