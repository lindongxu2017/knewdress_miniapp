/* pages/shop/pay/pay.wxss */

page {
    background-color: #f7f7f7;
}

.delivery {
    background-color: #fff;
    margin-bottom: 15rpx;
}

.delivery > image {
    width: 100%;
    height: 10rpx;
    display: block;
}

.van-cell-text {
    margin-right: 20rpx;
    font-size: 32rpx;
}

.van-cell-text, .phone {
    display: inline-block;
}

.pay-way {
    margin-bottom: 15rpx;
}

.custom-icon {
    color: #999;
    margin: 6rpx 0 0 10rpx;
}

.van-cell__label {
    font-size: 28rpx;
}

.goods-list {
    background-color: #fff;
    margin-bottom: 15rpx;
    padding: 30rpx;
}

.goods-list .item {
    display: flex;
    display: -webkit-flex;
    align-items: stretch;
    -webkit-align-items: stretch;
    margin-bottom: 30rpx;
}

.goods-list .item:last-child {
    margin-bottom: 0;
}

.item image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 4rpx;
}

.item .info {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
    justify-content: space-around;
    -webkit-justify-content: space-around;
    flex: 1;
    -webkit-flex: 1;
    width: 0;
    padding-left: 30rpx;
}

.item .info .title {
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item .info .attr {
    font-size: 0;
}

.item .info .attr > view {
    display: inline-block;
    vertical-align: middle;
    font-size: 24rpx;
    color: #999;
    margin-right: 20rpx;
    line-height: 1;
}

.item .info .num {
    font-size: 28rpx;
    color: #999;
    line-height: 1;
}

.price-num {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    justify-content: space-between;
    -webkit-justify-content: space-between;
}

.price-num .price {
    color: #f44;
}