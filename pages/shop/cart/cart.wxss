/* pages/cart/cart.wxss */
.list {
    padding-bottom: 120rpx;
}
.item {
    display: flex;
    display: -webkit-flex;
    padding: 20rpx;
    align-items: center;
    -webkit-align-items: center;
}
.check {
    padding: 20rpx;
}
.check .circle {
    width: 16px;
    height: 16px;
    border: 1px solid #ccc;
    border-radius: 50%;

}
.goods-info {
    display: flex;
    display: -webkit-flex;
    align-items: stretch;
    -webkit-align-items: stretch;
    flex: 1;
    -webkit-flex: 1;
    padding-left: 20rpx;
}
.goods-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 6rpx;
}
.info-text {
    flex: 1;
    -webkit-flex: 1;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
    padding-left: 20rpx;
    width: 0;
}
.info-text .desc {
    font-size: 32rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.info-text .num {
    font-size: 28rpx;
    color: #999;
}
.info-text .price {
    font-size: 28rpx;
    color: red
}
.van-hairline--top {
    box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.15);
}

.no-data {
    text-align: center;
    margin-top: 30%;
}
.no-data image {
    width: 40%;
    height: 30vw;
    opacity: 0.5;
}
.no-data .tips {
    font-size: 28rpx;
    color: #999;
    margin-top: 5%;
}
.no-data .btn{
    padding: 20rpx 40rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: #f44;
    display: inline-block;
    margin-top: 5%;
    border-radius: 100rpx;
}
.del-cell {
    width: 65px;
    height: 120rpx;
    background-color: #f44;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 120rpx;
    margin-top: 20rpx;
}