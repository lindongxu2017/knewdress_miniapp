/* pages/blogger/blogger.wxss */

page {
    width: 100%;
    height: 100%;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
}

.search-bar {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    margin: 0 30rpx;
    padding: 17rpx 20rpx;
    background-color: #f6f5f5;
    border-radius: 10rpx;
    will-change: transform;
    overflow: hidden;
}

.search-bar > image {
    width: 25px;
    height: 25px;
}

.icon-text {
    line-height: 1;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: flex-start;
    -webkit-justify-content: flex-start;
}

.icon-text image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.icon-text text {
    font-size: 28rpx;
    color: #b3b3b3;
    line-height: 1;
}

.infoType-wrapper {
    text-align: center;
    padding: 15px 0;
    position: relative;
    font-size: 0;
    border-bottom: 1px solid #eee;
}

.infoType-wrapper .type-item {
    display: inline-block;
    font-size: 15px;
    line-height: 16px;
    color: #85919c;
    padding: 0 35rpx;
}

.infoType-wrapper .type-item.active {
    color: #555;
    position: relative;
    font-size: 16px;
}

.infoType-wrapper .type-item.active::before {
    content: "";
    position: absolute;
    width: 40rpx;
    height: 6rpx;
    border-radius: 6rpx;
    background-color: #ffdb32;
    left: 50%;
    margin-left: -15rpx;
    bottom: -15px;
}

.swiper-tab-wrapper {
    flex: 1;
    -webkit-flex: 1;
}

.swiper-tab-wrapper swiper {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.content-flex-wrapper {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
    height: 100%;
}

.content-flex-wrapper .content-list {
    flex: 1;
    -webkit-flex: 1;
    height: 0;
}